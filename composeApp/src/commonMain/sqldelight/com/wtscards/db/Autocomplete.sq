-- ParallelName queries
selectAllParallelNames:
SELECT * FROM ParallelNameEntity ORDER BY name ASC;

selectParallelNamesByPrefix:
SELECT * FROM ParallelNameEntity WHERE name LIKE ? || '%' COLLATE NOCASE ORDER BY name ASC LIMIT 5;

